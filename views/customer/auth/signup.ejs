<%- include('../../shared/includes/head' , {pageTitle :"signup"})%>
<link rel="stylesheet" href="/style/auth.css" />
<link rel="stylesheet" href="/style/form.css" />

</head>
<body>
<%- include('../../shared/includes/header') %>

<main>
<h1>Create  new Account</h1>
<% if(inputData.errorMessage) { %>
    <section class="alert">
        <h2>Invalid Input</h2>
        <p><%= inputData.errorMessage %></p>
    </section>

<% } %>
<form action="/signup" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>"> 
    <p>
        <label for="email">E-mail</label>
        <input type="email" id="email" value="<%= inputData.email %>" name="email" required>
    </p>
    <p>
        <label for="confirm-email">Confirm Email</label>
        <input type="email" id="confirm-email" value="<%= inputData.confirmEmail %>" name="confirm-email" required>
    </p>
    <p>
        <label for="password">password</label>
        <input type="password" id="password" minlength="6" value="<%= inputData.password %>" name="password">
    </p>
    <hr>
    <p>
        <label for="fullname">Full name</label>
        <input type="text" id="fullname" value="<%= inputData.fullname %>" name="fullname">
    </p>
    <p>
        <label for="street">Street</label>
        <input type="text" id="street" value="<%= inputData.street %>" name="street" required>
    </p>
    <p>
        <label for="postal">Postal code</label>
        <input type="text" id="postal" value="<%= inputData.postal %>" name="postal"> 
    </p>
    <p>
        <label for="city">City</label>
        <input type="text" id="city" value="<%= inputData.city %>" name="city">
    </p>
    <button class="btn"> Create Account</button>
    <p id="switch-form "><a href="/login">Login instead</a></p>

</form>
</main>

<%- include('../../shared/includes/footer') %>
