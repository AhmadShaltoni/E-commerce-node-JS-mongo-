<%- include('../../shared/includes/head' , {pageTitle : product.title})%>
<script src="/scripts/product-management.js" defer ></script>
<script src="/scripts/cart-management.js" defer></script>
<link rel="stylesheet" href="/style/product.css">   

</head>
<body>
<%- include('../../shared/includes/header') %>

<main id="product-details">

<header>
    <img src="/products/assets/images/<%= product.image %>" alt="<%= product.title %>"/>
    <div id="product-info">
        <h1><%= product.title %></h1>
        <p><%= product.price %></p>
        <button class="btn" data-productid="<%= product.id %>" data-csrf="<%= locals.csrfToken %>">Add to Cart</button>
    </div>
</header>
<p><%= product.description %></p>
   
</main>

<%- include('../../shared/includes/footer') %>
